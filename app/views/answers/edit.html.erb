<h1 class="mb-4">Edit answer</h1>

<%# <%= render 'shared/errors', object: @answer %> %>

<%= form_with model: [@question, @answer] do |f| %>
<h2>You are answering to this question:</h2>
<p class="lead my-3">
    <%= @question.body %>
</p>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
  
  <%= f.submit "Update answer", class: 'btn btn-primary' %>
  
  <% end %>